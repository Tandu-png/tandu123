<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Tên môn -->
        <EditText
            android:id="@+id/edtTenMon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Tên môn"
            android:inputType="text" />

        <!-- Số tín chỉ -->
        <EditText
            android:id="@+id/edtTinChi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TC"
            android:inputType="number"
            android:layout_marginStart="8dp" />

        <!-- Điểm thường kỳ -->
        <EditText
            android:id="@+id/edtDiemThuongKy1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TK1"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/edtDiemThuongKy2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TK2"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/edtDiemThuongKy3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TK3"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

        <!-- Điểm thực hành -->
        <EditText
            android:id="@+id/edtDiemThucHanh1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TH1"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/edtDiemThucHanh2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TH2"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/edtDiemThucHanh3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="TH3"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />
        <EditText
            android:id="@+id/edtGiuaKy"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="GK"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

        <!-- Điểm cuối kỳ -->
        <EditText
            android:id="@+id/edtDiemCuoiKy"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="CK"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp" />

    </LinearLayout>
</HorizontalScrollView>
