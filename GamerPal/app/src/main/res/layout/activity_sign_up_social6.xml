<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C0517"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <!-- Header with Back Button and Title -->
    <!-- Confirmation Email Text -->
    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"/>


        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="48dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/cr5lr270f39a15ea4f0d" />

        <View
            android:layout_width="48dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/cr5lr270f39a15ea4f0d" />

        <View
            android:layout_width="48dp"
            android:layout_height="8dp"
            android:background="@drawable/cr5bd9d9d9" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="What are 3 of your favorite games?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Search Bar -->

    <!-- Game Grid -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="32dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/shadow"
            android:hint="Search Games"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#A3A3A3"
            android:textColorHint="#A3A3A3"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/r274wvo4qdfy"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/search"
            android:scaleType="centerInside" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C0517"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <GridLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_grid"
                android:columnCount="2"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:clipChildren="false">

                <!-- Game 1 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/shadow_rounded"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/minecraft"
                            android:background="@drawable/shadow_rounded"
                            android:clipToOutline="true"
                            android:outlineProvider="background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="6dp"
                            android:text="Minecraft"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Game 2 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/shadow_rounded"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/li_n_minh_huyn_thoi"
                            android:background="@drawable/shadow_rounded"
                            android:clipToOutline="true"
                            android:outlineProvider="background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="6dp"
                            android:text="Liên Minh Huyền Thoại"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Game 3 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/shadow_rounded"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/lien_quan_moblie"
                            android:background="@drawable/shadow_rounded"
                            android:clipToOutline="true"
                            android:outlineProvider="background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="6dp"
                            android:text="Liên Quân Mobile"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Game 4 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/shadow_rounded"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gta_5"
                            android:background="@drawable/shadow_rounded"
                            android:clipToOutline="true"
                            android:outlineProvider="background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="6dp"
                            android:text="GTA 5"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Game 5 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/shadow_rounded"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/play_together"
                            android:background="@drawable/shadow_rounded"
                            android:clipToOutline="true"
                            android:outlineProvider="background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="6dp"
                            android:text="Playtogether"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Game 6 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/shadow_rounded"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/clash_of_clan"
                            android:background="@drawable/shadow_rounded"
                            android:clipToOutline="true"
                            android:outlineProvider="background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="6dp"
                            android:text="Clash of Clan"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </RelativeLayout>
                </LinearLayout>

            </GridLayout>

            <LinearLayout
                    android:id="@+id/btnContinue"
                    android:layout_marginTop="20dp"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/cr10lr270a903d2410095"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="44dp"
                    android:paddingVertical="13dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Continue"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Terms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Skip This Step"
                android:id="@+id/skip_step"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
            <!-- Buttons at Bottom -->
        </LinearLayout>
            </ScrollView>




</LinearLayout>