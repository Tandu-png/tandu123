<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C0517"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="705dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <!-- Logo + Slogan -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAMERPAL"
                android:textColor="#FFFFFF"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUTG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Unity Through Gaming"
                android:textColor="#EB5E0A"
            android:textSize="20sp"
            android:textStyle="bold" />
        </LinearLayout>

        <!-- Các nút chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Nút Sign Up -->
            <LinearLayout
                android:id="@+id/btnSignUp"
                android:layout_width="270dp"
                android:layout_height="67dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cr10lr270a903d2410095"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Nút Log In -->
            <LinearLayout
                android:id="@+id/btnLogIn"
                android:layout_width="270dp"
                android:layout_height="67dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/s9636e2sw4cr10"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Nút Sign Up With G -->
            <LinearLayout
                android:id="@+id/btnSignUpWithG"
                android:layout_width="270dp"
                android:layout_height="67dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Sign Up With"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logos_google_icon" />
            </LinearLayout>
        </LinearLayout>

        <!-- Continue as Guest -->
        <TextView
            android:id="@+id/tvContinueAsGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="Continue as Guest"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"/>



        <!-- Thanh gạch dưới -->
    </LinearLayout>
</LinearLayout>
