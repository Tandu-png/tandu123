<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C0517"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:gravity="center_vertical">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="368dp"
        android:layout_height="87dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"/>


        <TextView
            android:layout_width="330dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Forgot Password"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content area chiếm hết phần còn lại, chia đều các phần bên trong -->
    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/youraccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Let’s recover your account."
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/r37fxkrb56k8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Check your email and enter the code below."
            android:textColor="#D0D0D0"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rdqf0z7r6cho"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/shadow"
            android:hint="Email or phone number"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#FFF7F7"
            android:textColorHint="#80FFFFFF"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1" />



        <LinearLayout
            android:id="@+id/roz7lejsdhme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/cr10lr270a903d2410095"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingHorizontal="44dp"
            android:paddingVertical="18dp">
            <!-- Nút Continue nằm dưới cùng -->
            <TextView
                android:id="@+id/r2fzw8ipw04x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Reset Code"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
